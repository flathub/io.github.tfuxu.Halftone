{
  "app-id" : "io.github.tfuxu.Halftone",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "46",
  "sdk" : "org.gnome.Sdk",
  "command" : "halftone",
  "finish-args" : [
      "--share=ipc",
      "--device=dri",
      "--socket=fallback-x11",
      "--socket=wayland",
      "--filesystem=/tmp"
  ],
  "cleanup" : [
      "/include",
      "/lib/pkgconfig",
      "/man",
      "/share/doc",
      "/share/gtk-doc",
      "/share/man",
      "/share/pkgconfig",
      "*.la",
      "*.a"
  ],
  "modules" : [
      "pypi-dependencies.json",
      {
          "name" : "blueprint-compiler",
          "buildsystem" : "meson",
          "cleanup": [
              "*"
          ],
          "sources" : [
              {
                  "type" : "git",
                  "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                  "tag" : "v0.12.0"
              }
          ]
      },
      {
        "name": "magick",
        "buildsystem": "autotools",
        "config-opts": [
          "--with-heic=yes",
          "--with-rsvg=yes"
        ],
        "sources": [
          {
            "type": "git",
            "url": "https://github.com/ImageMagick/ImageMagick.git",
            "tag": "7.1.1-29"
          }
        ]
      },
      {
          "name" : "halftone",
          "builddir" : true,
          "buildsystem" : "meson",
          "config-opts": [
              "-Dbuildtype=release"
          ],
          "sources" : [
              {
                  "type": "git",
                  "url": "https://github.com/tfuxu/Halftone.git",
                  "tag": "0.6.1"
              }
          ]
      }
  ]
}
